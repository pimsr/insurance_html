        <!-- <link rel="icon" href="../img/favicon.ico" type="image/x-icon" /> -->
        <link href="https://fonts.googleapis.com/css?family=Prompt:300,400,500" rel="stylesheet">

        <link href="{{ base_url('assets/backend/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ base_url('assets/backend/plugins/bootstrap-tagsinput/dist/bootstrap-tagsinput.css') }}" rel="stylesheet"/>
        <link href="{{ base_url('assets/backend/plugins/footable/css/footable.core.css') }}" rel="stylesheet">
        <link href="{{ base_url('assets/backend/plugins/bootstrap-select/dist/css/bootstrap-select.min.css') }}" rel="stylesheet" />
