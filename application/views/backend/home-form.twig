<form class="row form-submit form-home" data-table="box-table-home" action="{{ mode == 'add' ? base_url('backend/home/addHome') : base_url('backend/home/editHome') }}" method="post" enctype="multipart/form-data">
    <input type="hidden" name="id" value="{{ data.id }}">
    <div class="col-md-6">
        <div class="preview home_dotcom" style="background-image:url('{{ link_home~data.img }}')">
            <div class="text">
                <i class="fa fa-photo"></i>
                <p>726 x 485</p>
            </div>
            <input type="file" accept="image/*" name="img[]">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-md-2 control-label">สัญลักษณ์ : </label>
                <div class="col-md-10 row_half">
                    <div class="preview home_icon" style="background-image:url('{{ link_home~data.icon }}')">
                        <div class="text">
                            <i class="fa fa-photo"></i>
                            <p>50 x 50</p>
                        </div>
                        <input type="file" accept="image/*" name="icon[]">
                    </div>
                </div>
            </div>
            <br>
            <div class="form-group">
                <label class="col-md-2 control-label">หัวข้อ : </label>
                <div class="col-md-10">
                    <div class="row_half">
                        <div class="col_half">
                            <input type="text" name="title_th" value="{{ data.title_th }}" class="form-control" placeholder="กรุณาใส่ภาษาไทย">
                        </div>
                        <div class="col_half">
                            <input type="text" name="title_en" value="{{ data.title_en }}" class="form-control" placeholder="กรุณาใส่ภาษาอังกฤษ">
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">เนื้อหา : </label>
                <div class="col-md-10">
                    <textarea name="desc_th" class="form-control no-resize" rows="3" placeholder="กรุณาใส่ภาษาไทย">{{ data.desc_th }}</textarea>
                    <textarea name="desc_en" class="form-control no-resize mt-5" rows="3" placeholder="กรุณาใส่ภาษาอังกฤษ">{{ data.desc_en }}</textarea>
                </div>
            </div>
        </div>
    </div>
    {% if mode == 'edit' %}
    <div class="col-sm-12 text-right">
        <button type="button" class="btn btn-white waves-effect waves-light w-lg on-cancel">ยกเลิก</button>
        <button type="submit" class="btn btn-inverse waves-effect waves-light w-lg">แก้ไข</button>
    </div>
    {% else %}
    <div class="col-sm-12 text-right">
        <button type="submit" class="btn btn-inverse waves-effect waves-light w-lg">+ เพิ่ม</button>
    </div>
    {% endif %}
</form>