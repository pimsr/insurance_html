{% extends "layout_backend.twig" %}

{% block content %}
<div class="wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <br>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default panel-border">
                    <div class="panel-heading no-slide">
                        <h3 class="panel-title">ให้เราติดต่อคุณ</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12">
                                {% if kids|length == 0 %}
                                <div class="msg-empty">ยังไม่มีข้อมูล</div>
                                {% else %}
                                <div class="table-responsive">
                                    <table class="table m-b-0 toggle-arrow-tiny demo-foo-accordion">
                                        <thead>
                                            <tr>
                                                <th data-toggle="true">ชื่อ</th>
                                                <th>ประกันที่สนใจ</th>
                                                <th>วันที่</th>
                                                <th data-hide="all">อีเมล</th>
                                                <th data-hide="all">เบอร์โทรศัพท์</th>
                                                <th data-hide="all">วันเกิดลูก</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for key, value in kids %}
                                            <tr>
                                                <td>{{ value.name }}</td>
                                                <td>{{ value.type }}</td>
                                                <td>{{ value.created_date|date("d/m/Y H:i:s") }}</td>
                                                <td>{{ value.email }}</td>
                                                <td>{{ value.tel }}</td>
                                                <td>{{ value.date }}</td>
                                            </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-default panel-border">
                    <div class="panel-heading no-slide">
                        <h3 class="panel-title">ติดต่อประกันลูก</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12">
                                {% if data|length == 0 %}
                                <div class="msg-empty">ยังไม่มีข้อมูล</div>
                                {% else %}
                                <div class="table-responsive">
                                    <table class="table m-b-0 toggle-arrow-tiny demo-foo-accordion">
                                        <thead>
                                            <tr>
                                                <th data-toggle="true">ชื่อ</th>
                                                <th>เรื่อง</th>
                                                <th>วันที่</th>
                                                <th data-hide="all">อีเมล</th>
                                                <th data-hide="all">เบอร์โทรศัพท์</th>
                                                <th data-hide="all">เลขบัตรประชาชน*</th>
                                                <th data-hide="all">เลขที่กรมธรรม์</th>
                                                <th data-hide="all">ข้อความ</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for key, value in data %}
                                            <tr>
                                                <td>{{ value.name }}</td>
                                                <td>{{ value.subject }}</td>
                                                <td>{{ value.created_date|date("d/m/Y H:i:s") }}</td>
                                                <td>{{ value.email }}</td>
                                                <td>{{ value.tel }}</td>
                                                <td>{{ value.card_id }}</td>
                                                <td>{{ value.policy_number }}</td>
                                                <td>{{ value.message }}</td>
                                            </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block js %}{% endblock %}