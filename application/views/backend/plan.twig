{% extends "layout_backend.twig" %}

{% block content %}
<div class="wrapper">
    <div class="container">
        <div class="row">
            <br>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default panel-border">
                    <div class="panel-heading">
                        <h3 class="panel-title">แบนเนอร์</h3>
                        <i class="fa fa-angle-down tab-icon"></i>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="preview home_banner">
                                    <div class="text">
                                        <i class="fa fa-photo"></i>
                                        <p>1920 x 580</p>
                                    </div>
                                    <input type="file" accept="image/*">
                                </div>
                                <div class="text-right mt-5">
                                    <button type="button" class="btn btn-inverse waves-effect waves-light w-lg">บันทึก</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default panel-border">
                    <div class="panel-heading closed">
                        <h3 class="panel-title">รายละเอียด</h3>
                        <i class="fa fa-angle-down tab-icon"></i>
                    </div>
                    <div class="panel-body closed">
                        <div class="row in_caption">
                            <div class="col-md-6">
                                <div class="preview">
                                    <div class="text">
                                        <i class="fa fa-photo"></i>
                                        <p>540 x 360</p>
                                    </div>
                                    <input type="file" accept="image/*">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div role="form">
                                    <div class="form-group">
                                        <label>หัวข้อ: </label>
                                        <div class="row_half">
                                            <div class="col_half"><input type="text" class="form-control" placeholder="กรุณาใส่ภาษาไทย"></div>
                                            <div class="col_half"><input type="text" class="form-control" placeholder="กรุณาใส่ภาษาอังกฤษ"></div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>เนื้อหา: </label>
                                        <textarea class="form-control no-resize" placeholder="กรุณาใส่ภาษาไทย"></textarea>
                                        <textarea class="form-control no-resize mt-5" placeholder="กรุณาใส่ภาษาอังกฤษ"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label>หมายเหตุ: </label>
                                        <div class="row_half">
                                            <div class="col_half"><input type="text" class="form-control" placeholder="กรุณาใส่ภาษาไทย"></div>
                                            <div class="col_half"><input type="text" class="form-control" placeholder="กรุณาใส่ภาษาอังกฤษ"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="row in_caption">
                            <div class="col-md-6">
                                <div role="form">
                                    <div class="form-group">
                                        <label>หัวข้อ: </label>
                                        <div class="row_half">
                                            <div class="col_half"><input type="text" class="form-control" placeholder="กรุณาใส่ภาษาไทย"></div>
                                            <div class="col_half"><input type="text" class="form-control" placeholder="กรุณาใส่ภาษาอังกฤษ"></div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>เนื้อหา: </label>
                                        <textarea class="form-control no-resize" placeholder="กรุณาใส่ภาษาไทย"></textarea>
                                        <textarea class="form-control no-resize mt-5" placeholder="กรุณาใส่ภาษาอังกฤษ"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label>หมายเหตุ: </label>
                                        <div class="row_half">
                                            <div class="col_half"><input type="text" class="form-control" placeholder="กรุณาใส่ภาษาไทย"></div>
                                            <div class="col_half"><input type="text" class="form-control" placeholder="กรุณาใส่ภาษาอังกฤษ"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="preview">
                                    <div class="text">
                                        <i class="fa fa-photo"></i>
                                        <p>540 x 360</p>
                                    </div>
                                    <input type="file" accept="image/*">
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="text-right">
                            <button type="button" class="btn btn-inverse waves-effect waves-light w-lg">บันทึก</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default panel-border">
                    <div class="panel-heading closed">
                        <h3 class="panel-title">แพ็คเกจ</h3>
                        <i class="fa fa-angle-down tab-icon"></i>
                    </div>
                    <div class="panel-body closed">
                        <div class="text-right">
                            <button type="button" class="btn btn-dribbble waves-effect waves-light" onclick="addPackage()">
                                <span class="btn-label"><i class="fa fa-plus-circle"></i></span> เพิ่มแพ็คเกจ
                            </button>
                        </div>
                        <div class="row mt-5">
                            <div class="col-md-12 box_package">
                                <div class="portlet">
                                    <div class="portlet-heading portlet-default">
                                        <div class="portlet-title text-dark in_packname" data-toggle="collapse" data-parent="#accordion0" class="collapsed" aria-expanded="false">
                                            <input type="text" class="seq form-control" maxlength="2" value="0">
                                            <div class="row_half">
                                                <div class="col_half">
                                                    <input type="text" class="form-control" placeholder="แพ็คเกจภาษาไทย">
                                                </div>
                                                <div class="col_half">
                                                    <input type="text" class="form-control" placeholder="แพ็คเกจภาษาอังกฤษ">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="portlet-widgets">
                                            <a data-toggle="collapse" data-parent="#accordion0" href="#pack0" class="collapsed" aria-expanded="false"><i class="ion-minus-round"></i></a>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div id="pack0" class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
                                        <div class="portlet-body">
                                            <div class="in_editor">
                                                <div class="lang">
                                                    <div class="in active">ไทย</div>
                                                    <div class="in">Eng</div>
                                                </div>
                                                <textarea class="editor th"></textarea>
                                                <textarea class="editor en" style="display:none;"></textarea>
                                            </div>
                                            <div class="text-right mt-5">
                                                <button type="button" class="delete_package btn btn-pinterest waves-effect waves-light">
                                                    <i class="fa fa-trash"></i> ลบแพ็คเกจนี้
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-right mt-5">
                            <button type="button" class="btn btn-inverse waves-effect waves-light w-lg">บันทึก</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

