{% extends "layout_backend.twig" %}

{% block content %}
<div class="wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <br>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default panel-border">
                    <div class="panel-heading">
                        <h3 class="panel-title">แบนเนอร์ประกันสุขภาพลูก</h3>
                        <i class="fa fa-angle-down tab-icon"></i>
                    </div>
                    <div class="panel-body">
                        <form class="row form-submit-update" action="{{ base_url('backend/info/setCover') }}" method="post" enctype="multipart/form-data">
                            <div class="col-md-12">
                                <input type="hidden" name="position" value="{{ cover.position }}">
                                <div class="preview cover_banner" style="background-image: url('{{ link_cover~cover.img }}')">
                                    <div class="text">
                                        <i class="fa fa-photo"></i>
                                        <p>1920 x 440</p>
                                    </div>
                                    <input type="file" accept="image/*" name="img[]">
                                </div>
                               <br>
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">หัวข้อ : </label>
                                        <div class="col-md-10">
                                            <div class="row_half">
                                                <div class="col_half">
                                                    <input name="title_th" value="{{ cover.title_th }}" type="text" class="form-control" placeholder="กรุณาใส่ภาษาไทย">
                                                </div>
                                                <div class="col_half">
                                                    <input name="title_en" value="{{ cover.title_en }}" type="text" class="form-control" placeholder="กรุณาใส่ภาษาอังกฤษ">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-right mt-5">
                                    <button type="submit" class="btn btn-inverse waves-effect waves-light w-lg">บันทึก</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="panel panel-default panel-border">
                    <div class="panel-heading closed">
                        <h3 class="panel-title">ประกันสุขภาพลูก</h3>
                        <i class="fa fa-angle-down tab-icon"></i>
                    </div>
                    <div class="panel-body closed">
                        <div class="row">
                            <div class="col-md-12 box-form box-form-insurance" data-load="{{ base_url('backend/info/addInsurance') }}"></div>
                            <div class="col-md-12"><br><br></div>
                            <div class="col-md-12 box-table box-table-insurance" data-load="{{ base_url('backend/info/tableInsurance') }}"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="panel panel-default panel-border">
                    <div class="panel-heading closed">
                        <h3 class="panel-title">ทำไมต้องเลือกประกันลูก</h3>
                        <i class="fa fa-angle-down tab-icon"></i>
                    </div>
                    <div class="panel-body closed">
                        <form class="row form-submit-update" action="{{ base_url('backend/info/setHow') }}" method="post">
                            <div class="col-md-12">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <div class="row_half">
                                                <div class="col_half">
                                                    <textarea class="form-control no-resize" rows="5" name="head_th" placeholder="เกริ่นนำภาษาไทย">{{ how_head[0].desc_th }}</textarea>
                                                </div>
                                                <div class="col_half">
                                                    <textarea class="form-control no-resize" rows="5" name="head_en" placeholder="เกริ่นนำภาษาอังกฤษ">{{ how_head[0].desc_en }}</textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <div class="row_half">
                                                {% for key, value in how_content %}
                                                <div class="col_half">
                                                    <input type="hidden" name="id[{{ key }}]" value="{{ value.id }}">
                                                    <div class="in_how">
                                                        <div class="preview home_icon" style="background-image: url('{{ link_insurance~value.icon }}')">
                                                            <div class="text">
                                                                <i class="fa fa-photo"></i>
                                                                <p>50 x 50</p>
                                                            </div>
                                                            <input type="file" accept="image/*" name="icon[{{ key }}]">
                                                        </div>
                                                        <div class="row_half">
                                                            <div class="col_half">
                                                                <input type="text" name="title_th[{{ key }}]" value="{{ value.title_th }}" class="form-control" placeholder="หัวข้อภาษาไทย">
                                                            </div>
                                                            <div class="col_half">
                                                                <input type="text" name="title_en[{{ key }}]" value="{{ value.title_en }}" class="form-control" placeholder="หัวข้อภาษาอังกฤษ">
                                                            </div>
                                                        </div>
                                                        <div class="row_half">
                                                            <div class="col_half">
                                                                <textarea name="desc_th[{{ key }}]" class="form-control" placeholder="เนื้อหาภาษาไทย">{{ value.desc_th }}</textarea>
                                                            </div>
                                                            <div class="col_half">
                                                                <textarea name="desc_en[{{ key }}]" class="form-control" placeholder="เนื้อหาภาษาอังกฤษ">{{ value.desc_en }}</textarea>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                {% endfor %}
                                            </div>
                                            <div class="text-right mt-20">
                                                <button type="submit" class="btn btn-inverse waves-effect waves-light w-lg">บันทึก</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block js %}{% endblock %}